                                xmlns="http://www.w3.org/2000/svg" 
                                fill="none" 
                                viewBox="0 0 24 24" 
                                stroke-width="1.5" 
                                stroke="currentColor" 
                                class="w-5 h-5 mr-3 transition-transform duration-300 group-hover:scale-110"
                            >
                                <path stroke-linecap="round" stroke-linejoin="round" d={item.icon} />
                            </svg>
